@model Skunkworks.data.Entities.Projects
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html lang="en">



    <body>

        <!-- ======= Header ======= -->
        <header id="header" class="header fixed-top d-flex align-items-center">
            @Html.Partial("_Navbar")
        </header><!-- End Header -->


        <main id="main" class="main">

            <div class="pagetitle">
                <h1>Add Project</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("index", "Home")">Home</a></li>
                        <li class="breadcrumb-item">Project</li>
                        <li class="breadcrumb-item active">Add Project</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->

            <section class="section profile">
                <div class="row">


                    <div class="col-xl-8">

                        <div class="card">
                            <div class="card-body pt-3">
                                <!-- Bordered Tabs -->
                                @using (Html.BeginForm("Create", "Project"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="tab-content pt-2">

                                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                            <h5 class="card-title">Skills</h5>

                                            <div class="row">
                                                <div class="col-lg-3 col-md-4 label ">Name</div>
                                                <div class="col-lg-9 col-md-8">
                                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <label for="about" class="col-md-4 col-lg-3 col-form-label">Specifications</label>
                                                <div class="col-md-8 col-lg-9">
                                                    @Html.TextAreaFor(model => model.About, new { Styles = "height: 100px" })
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-3 col-md-4 label ">Due Date</div>
                                                <div class="col-lg-9 col-md-8">
                                                    @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-3 col-md-4 label ">Budget</div>
                                                <div class="col-lg-9 col-md-8">
                                                    @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-3 col-md-4 label ">Links</div>
                                                <div class="col-lg-9 col-md-8">
                                                    @Html.EditorFor(model => model.Links, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary">Create</button>
                                        </div>

                                    </div>
                                }<!-- End Bordered Tabs -->

                            </div>
                        </div>

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </section>

        </main><!-- End #main -->
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }

    </body>

</html>


}


